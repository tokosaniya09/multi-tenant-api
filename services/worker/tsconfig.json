    "target": "ES2021",
    "module": "commonjs",

    "rootDir": "src",
    "outDir": "dist",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
